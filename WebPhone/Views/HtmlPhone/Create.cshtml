@model Entities.Phone

@{
    ViewData["Title"] = "Создание нового телефона";
}

    <h1>Создание нового телефона</h1>

<h4>Телефон</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label>Название</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label>Цена</label>
                <input asp-for="Price" class="form-control" />
            </div>
            <div class="form-group">
                <p>Тут поидее выбор автора, но мы упростим - введем id</p>
                <label>ShopId</label>
                <input asp-for="ShopId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>